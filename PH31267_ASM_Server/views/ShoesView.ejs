<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        table {
            border: 1px solid black;
        }

        td {
            padding: 10px;
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <h1>Danh sách giày</h1>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>IDTrademark</td>
                <td>Name</td>
                <td>Quantity</td>
                <td>Price</td>
                <td>Classify</td>
            </tr>
        </thead>
        <tbody>
            <% shoes.forEach(function(shoes){ %>
                <tr>
                    <td>
                        <%= shoes.id %>
                    </td>
                    <td>
                        <%= shoes.idTrademark %>
                    </td>
                    <td>
                        <%= shoes.name %>
                    </td>
                    <td>
                        <%= shoes.quantity %>
                    </td>
                    <td>
                        <%= shoes.price %>
                    </td>
                    <td>
                        <%= shoes.classify %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

</body>

</html>